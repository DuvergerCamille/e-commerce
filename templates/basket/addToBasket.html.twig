{% extends 'layout.html.twig' %}

{% block title %}

Ajout - {{ parent() }}

{% endblock %}

{% block body %}

<div class="flash">
    {% for message in app.flashes('notice') %}
        <p>{{ message }}</p>
    {% endfor %}
</div>

<h2>Ajout de l'article {{ prod.name }} à votre panier</h2>

<h3>Combien de {{ prod.name }} souhaitez-vous ajouter à votre panier ?</h3>

<div class="formulaire">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="groupe">
        {{ form_label(form.quantity, "Quantité") }}
        {{ form_errors(form.quantity) }}
        <div class="boite">
            {{ form_widget(form.quantity)}}
        </div>
    </div>
    <br />
    {{ form_widget(form.confirmer)}}
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
<br />

{% endblock %}